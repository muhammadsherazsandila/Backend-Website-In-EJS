<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Open Bazaar | Loged In User</title>
    <link rel="stylesheet" href="../styleSheets/index.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50">
    <% if (error.length> 0) { %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= error %>
            </span>
        </div>
        <% } %>

            <!-- Header Section -->
            <header class="bg-gradient-to-r from-indigo-500 to-blue-500 text-white">
                <div class="container mx-auto px-6 py-8">
                    <div class="flex items-center justify-between">
                        <!-- Brand Name -->
                        <div class="text-2xl font-bold">Open Bazaar</div>

                        <!-- Hamburger Button -->
                        <button id="hamburger-btn" class="md:hidden focus:outline-none">
                            <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M4 6h16M4 12h16m-7 6h7" />
                            </svg>
                        </button>

                        <!-- Navigation Links -->
                        <nav id="nav-menu" class="hidden md:flex space-x-4">
                            <a href="#about" class="hover:text-gray-200">About</a>
                            <a href="#contact" class="hover:text-gray-200">Contact</a>
                            <a href="/cart" class="bg-white text-blue-500 px-4 py-2 rounded-md ">Cart</a>
                            <a href="/logout" class="bg-white text-blue-500 px-4 py-2 rounded-md">Logout</a>
                        </nav>
                    </div>
                </div>

                <!-- Mobile Menu -->
                <div id="mobile-menu" class="hidden flex-col bg-indigo-600 overflow-hidden transition-all duration-300"
                    style="max-height: 0;">
                    <a href="#about" class="block px-6 py-2 text-white hover:bg-indigo-700">About</a>
                    <a href="#contact" class="block px-6 py-2 text-white hover:bg-indigo-700">Contact</a>
                    <a href="/cart" class="bg-white text-blue-500 px-4 py-2 rounded-md ">Cart</a>
                    <a href="/logout" class="bg-white text-blue-500 px-4 py-2 rounded-md">Logout</a>
                </div>
            </header>


            <!-- Hero Section -->
            <section class="bg-indigo-600 text-white py-20 text-center">
                <div class="container mx-auto px-6">
                    <h1 class="text-4xl font-bold mb-4">Welcome <%= user.fullName%> To Open Bazaar!</h1>
                    <p class="text-xl mb-6">Discover amazing products designed to elevate your everyday experience</p>
                    <a href="#about" class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-6 rounded-md">Learn
                        More</a>
                </div>
            </section>

            <!-- Products Section -->
            <section id="products" class="py-20 bg-gray-100">
                <div class="container mx-auto px-6">
                    <h2 class="text-3xl font-bold text-center mb-10">Our Products</h2>
                    <div class="d-flex flex-wrap justify-evenly">
                        <!-- Product Cards -->
                        <% if (owner.products.length !==0) { %>
                            <% owner.products.reverse().forEach((item)=> { %>
                                <div class="card rounded m-5" style="width: 18rem;">
                                    <img src="data:<%= item.productPic.mimetype %>;base64,<%= item.productPic.toString('base64') %>"
                                        class="card-img-top" alt="...">
                                    <div class="card-body bg-[<%= item.panelColor%>]">
                                        <strong class="card-title text-[<%=item.textColor%>]">
                                            <%=item.productName%>
                                        </strong>
                                        <p class="card-text text-[<%=item.textColor%>]">Rs.<%= item.productPrice%>-/</p>
                                    </div>
                                    <a href="/products/addToCart/<%=item._id%>"
                                        class="bg-indigo-600 p-2 text-white hover:bg-indigo-700 text-center">Add To
                                        Cart</a>
                                </div>
                                <% }); %>

                                    <% } else { %>
                                        <p>No Products Yet.</p>
                                        <% } %>
                                            <!-- Add more product cards as needed -->
                    </div>
                </div>
            </section>




            <!-- About Section -->
            <section id="about" class="py-20 bg-white">
                <div class="container mx-auto px-6">
                    <h2 class="text-3xl font-bold text-center mb-10">About Us</h2>
                    <div class="text-center max-w-3xl mx-auto">
                        <p class="text-gray-700 mb-6">We are a leading provider of innovative solutions that cater to
                            your business needs. Our team is dedicated to delivering high-quality services and products
                            that bring value to our clients.</p>
                        <p class="text-gray-700">With years of experience and a passion for excellence, we continue to
                            strive for success in every project we undertake. Our commitment to customer satisfaction is
                            what sets us apart in the industry.</p>
                    </div>
                </div>
            </section>

            <!-- Call-to-Action Section -->
            <section class="bg-blue-500 text-white py-16">
                <div class="container mx-auto px-6 text-center">
                    <h2 class="text-3xl font-bold mb-4">Ready to Get Started?</h2>
                    <p class="text-xl mb-6">Sign up today and start enjoying all the benefits we have to offer!</p>
                    <a href="#contact" class="bg-white text-blue-500 px-6 py-3 rounded-md">Get Started</a>
                </div>
            </section>

            <!-- Contact Section -->
            <section id="contact" class="py-20 bg-gray-50">
                <div class="container mx-auto px-6">
                    <h2 class="text-3xl font-bold text-center mb-10">Contact Us</h2>
                    <form class="max-w-lg mx-auto bg-white p-8 rounded-lg shadow-md">
                        <div class="mb-6">
                            <label for="name" class="block text-gray-700 font-semibold mb-2">Full Name</label>
                            <input type="text" id="name"
                                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                                required>
                        </div>
                        <div class="mb-6">
                            <label for="email" class="block text-gray-700 font-semibold mb-2">Email Address</label>
                            <input type="email" id="email"
                                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                                required>
                        </div>
                        <div class="mb-6">
                            <label for="message" class="block text-gray-700 font-semibold mb-2">Message</label>
                            <textarea id="message"
                                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                                rows="4" required></textarea>
                        </div>
                        <button type="submit"
                            class="bg-blue-500 text-white px-6 py-3 rounded-md hover:bg-blue-600 w-full">Send
                            Message</button>
                    </form>
                </div>
            </section>

            <!-- Footer -->
            <footer class="bg-gray-800 text-white py-6">
                <div class="container mx-auto text-center">
                    <p>&copy; 2024 My Company. All Rights Reserved.</p>
                </div>
            </footer>

</body>
<script>
    const hamburgerBtn = document.getElementById("hamburger-btn");
    const mobileMenu = document.getElementById("mobile-menu");

    hamburgerBtn.addEventListener("click", () => {
        if (mobileMenu.classList.contains("hidden")) {
            // Show the menu
            mobileMenu.classList.remove("hidden");
            mobileMenu.style.maxHeight = mobileMenu.scrollHeight + "px";
        } else {
            // Hide the menu
            mobileMenu.style.maxHeight = "0";
            setTimeout(() => {
                mobileMenu.classList.add("hidden");
            }, 300); // Matches the `duration-300` in Tailwind
        }
    });
</script>

</html>